<Window x:Class="UI.bestuurder.BestuurderDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.bestuurder"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Bestuurder details" Height="450" Width="450">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="lbl_Details"/>
        <Button Grid.Row="1" Content="Bewerk" HorizontalAlignment="Left" Width="80" Click="btn_Bewerk_Click"/>
        <Button Grid.Row="1" Content="Ok" HorizontalAlignment="Right" Width="80" Click="btn_Ok_Click"/>
    </Grid>
</Window>
