<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Fleet Management" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Nieuw">
                <MenuItem Header="Bestuurder" Click="btn_BestuurderMaken_Click"/>
                <MenuItem Header="Voertuig"/>
                <MenuItem Header="Tankkaart" Click="btn_TankkaartMaken_Click"/>
                <MenuItem Header="Voertuig" Click="btn_VoertuigMaken_Click"/>
                <MenuItem Header="Tankkaart"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" x:Name="tab_Selector" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Bestuurder" Name="b"/>
            <TabItem Header="Voertuig" Name="v"/>
            <TabItem Header="Tankkaart" Name="t"/>

        </TabControl>
        <Frame Grid.Row="1" x:Name="Main" NavigationUIVisibility="Hidden"/>
    </Grid>

</Window>
