<Page x:Class="UI.tankkaart.TankkaartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI"
      mc:Ignorable="d" 
      Height="450" Width="800"
      Title="Tankkaart beheer">

    <Grid Margin="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Label Content="Tankkaart zoeken" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10"/>
        <TextBox Grid.Column="0" Grid.Row="1" Margin="2" x:Name="tbkZoekenOpKaartnummer"  TextWrapping="WrapWithOverflow" HorizontalAlignment="Right" Width="125">
            <TextBox.Style>
                <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <Label Content="Kaartnummer" Foreground="Gray" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button Grid.Row="2" x:Name="btn_Wis" Click="btn_Wis_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,102,0" Width="25" Content="Wis" Height="22" IsEnabled="False"/>
        <ComboBox Grid.Row="2" x:Name="cmb_ZoekenOpBrandstof" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="2" Width="100" SelectionChanged="cmb_ZoekenOpBrandstof_SelectionChanged"/>

        <DatePicker Grid.Row="3" Margin="2" x:Name="dpk_ZoekenOpGeldigheid" CalendarOpened="dpk_ZoekenOpGeldigheid_CalendarOpened" HorizontalAlignment="Right" VerticalAlignment="Top" Width="125" Height="24">
            <DatePicker.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="Text" Value="Geldig tot"/>
                </Style>
            </DatePicker.Resources>
        </DatePicker>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="Kaartnummer" Margin="2" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Text="Brandstof" Margin="2" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Grid.Column="2" Grid.Row="3" Margin="2" Content="Toon overeenkomende" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Height="24" Click="btn_Zoek_Click"/>

        <Border Grid.Row="0" Grid.RowSpan="4" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="LightSlateGray"/>
        <Label Grid.Row="5" Grid.ColumnSpan="3" BorderThickness="1,1,1,1" BorderBrush="LightSlateGray">
            <TextBlock x:Name="tbl_Details" x:FieldModifier="public"/>
        </Label>

        <ListView Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="6" x:Name="lsv_TankkaartLijst" SelectionChanged="lsv_TankkaartLijst_SelectionChanged" x:FieldModifier="public" GridViewColumnHeader.Click ="lsv_TankkaartLijst_Click">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding KaartNummer}" Header="Kaartnummer"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Brandstoffen}" Header="Brandstof"/>
                    <GridViewColumn DisplayMemberBinding="{Binding GeldigheidsDatum, StringFormat='yyyy-MM-dd'}" Header="Geldig tot"/>
                </GridView>
            </ListView.View>
            <ListView.Resources>
                <ContextMenu x:Key="lsv_CtxMenu">
                    <MenuItem Header="Bewerk" Click="btn_TankkaartAanpassen_Click"/>
                    <Separator/>
                    <MenuItem Header="Verwijder" Click="btn_TankkaartVerwijderen_Click"/>
                </ContextMenu>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="ContextMenu" Value="{StaticResource lsv_CtxMenu}"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
    <Page.Resources>
        <DataTemplate x:Key="HeaderTemplateArrowUp">
            <DockPanel LastChildFill="True" Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type GridViewColumnHeader}}}">
                <Path x:Name="arrowUp" StrokeThickness="1" Fill="Gray" Data="M 5,10 L 15,10 L 10,5 L 5,10" DockPanel.Dock="Right" Width="20" HorizontalAlignment="Right" Margin="5,0,5,0" SnapsToDevicePixels="True"/>
                <TextBlock Text="{Binding }" />
            </DockPanel>
        </DataTemplate>

        <DataTemplate x:Key="HeaderTemplateArrowDown">
            <DockPanel LastChildFill="True" Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type GridViewColumnHeader}}}">
                <Path x:Name="arrowDown" StrokeThickness="1" Fill="Gray"  Data="M 5,5 L 10,10 L 15,5 L 5,5" DockPanel.Dock="Right" Width="20" HorizontalAlignment="Right" Margin="5,0,5,0" SnapsToDevicePixels="True"/>
                <TextBlock Text="{Binding }" />
            </DockPanel>
        </DataTemplate>
    </Page.Resources>
</Page>