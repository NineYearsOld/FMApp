<Window x:Class="UI.voertuig.VoertuigDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.voertuig"
        mc:Ignorable="d"
        Title="VoertuigDetails" Height="450" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Name="result" FontSize="14" Margin="10"/>
        <Button Name="details" Content="Details" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <Button Name="update" Content="Aanpassen" Grid.Row="1" HorizontalAlignment="Left" Width="100" Height="25" Click="update_Click"/>
        <Button Name="verwijder" Content="Verwijder" Grid.Row="1" HorizontalAlignment="Center" Width="100" Height="25" Click="verwijder_Click"/>
        <Button Name="back" Content="Annuleer" Grid.Row="1" HorizontalAlignment="Right" Width="100" Height="25" Click="back_Click"/>
    </Grid>
</Window>
